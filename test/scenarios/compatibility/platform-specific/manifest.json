{
    "manifest_version": 3,
    "name": "Platform Specific Extension",
    "version": "1.0.0",
    "description": "Extension with platform-specific features",
    "minimum_chrome_version": "88",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "system.cpu",
        "system.memory",
        "system.storage",
        "nativeMessaging"
    ],
    "optional_permissions": [
        "usb",
        "serial"
    ]
}